<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Very Simple Application Analytics</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Application Page</h1>
		<a href="/profile" class="btn btn-default btn-sm">Profile</a>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<div class="well">
				<h3><span class="fa fa-user"></span> Create new application</h3>
					<p>
						<form class="form-horizontal" action="/app" method="post">
						<fieldset>

						<!-- Text input-->
						<div class="form-group">
						  <label class="col-md-4 control-label" for="appname">Application name</label>  
						  <div class="col-md-8">
						  <input id="appname" name="appname" type="text" placeholder="com.example.application" class="form-control input-md" required="">
						  <span class="help-block">Enter your application name here</span>  
						  </div>
						</div>

						<!-- Button -->
						<div class="form-group">
						  <label class="col-md-4 control-label" for="submit">Create new app</label>
						  <div class="col-md-4">
							<button id="submit" name="submit" class="btn btn-primary">Create</button>
						  </div>
						</div>

						</fieldset>
						</form>
					</p>

			</div>
		</div>

	</div>

</div>
</body>
</html>
