<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Very Simple Application Analytics</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Application Page</h1>
		<a href="/profile" class="btn btn-default btn-sm">Profile</a>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<div class="well">
				<h3><span class="fa fa-user"></span> Application event log: <%=app.app.Name %></h3>
					<p>
						<strong>ApiKey</strong>: <%=app.app.ApiKey %><br>
						<strong>ApiSecret</strong>: <%=app.app.ApiSecret %>
					</p>
					<p>
						<% for(var i=0; i<app.events.length; i++) { %>
						<%=app.events[i].Logged %> - <%=app.events[i].Description %><br>
						<% } %>
					</p>
			</div>
		</div>

	</div>

</div>
</body>
</html>
